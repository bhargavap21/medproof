{
  "name": "medproof",
  "version": "1.0.0",
  "description": "Privacy-Preserving Medical Research Platform using Zero-Knowledge Proofs",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "compile:contracts": "cd contracts && npx hardhat compile",
    "deploy:contracts": "cd contracts && npx hardhat run scripts/deploy.js --network localhost",
    "test": "npm run test:contracts && npm run test:frontend && npm run test:backend",
    "test:contracts": "cd contracts && npx hardhat test",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test"
  },
  "workspaces": [
    "frontend",
    "backend",
    "contracts"
  ],
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "zero-knowledge",
    "medical-research",
    "privacy",
    "blockchain",
    "healthcare",
    "HIPAA"
  ],
  "author": "MedProof Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.57.2",
    "dotenv": "^17.2.2"
  }
}
