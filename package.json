{
  "name": "medproof",
  "version": "1.0.0",
  "description": "Privacy-Preserving Medical Research Platform using Zero-Knowledge Proofs",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:proof-service\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && PORT=3001 node src/index.js",
    "dev:proof-service": "cd midnight-integration/medproof-contract && node proof-service.mjs",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "compile:contract": "cd midnight-integration/medproof-contract && npm run compile",
    "deploy:contract": "cd midnight-integration/medproof-contract && npm run deploy",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test"
  },
  "workspaces": [
    "frontend",
    "backend",
    "midnight-integration/medproof-contract"
  ],
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "zero-knowledge",
    "medical-research",
    "privacy",
    "blockchain",
    "healthcare",
    "HIPAA"
  ],
  "author": "MedProof Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.57.2",
    "dotenv": "^17.2.2"
  }
}
